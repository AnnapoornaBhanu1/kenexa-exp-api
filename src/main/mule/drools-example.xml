	<http:listener-config name="HTTP_Listener_config1" doc:name="HTTP Listener config" doc:id="a56d4d2c-dd70-4002-bf11-09db8b01c520" >
		<http:listener-connection host="localhost" port="8081" />
	</http:listener-config>
	<flow name="drools-exampleFlow" doc:id="d544ce83-d6d6-41d5-a0d9-cfb6af089540" >
		<http:listener doc:name="Listener" doc:id="0d88ede3-b2c4-4fe9-8a94-1f3cb1e160d0" path="/drools-test" allowedMethods="POST" outputMimeType="application/json" config-ref="HTTP_Listener_config1"/>
		<ee:transform doc:name="Transform Message" doc:id="81815fdf-2f64-4015-85ca-422b86309eda" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
{
	orgName: payload.orgName as String,
	firstName: payload.firstName as String,
	middleName: payload.middleName as String,
	lastName: payload.lastName as String
	
} as Object {
	class : "com.drools.example.Name"
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<set-variable value='#[payload&#10;as Object {&#10;	class : "com.drools.example.Name"&#10;}]' doc:name="Set Variable" doc:id="88cce3e3-3373-4c8f-ace3-280467feb78b" variableName="flowName" mimeType="application/java"/>
