			<java:args ><![CDATA[#[{
	arg0 : vars.flowName
}]]]></java:args>
		</java:invoke-static>
		<ee:transform doc:name="Transform Message" doc:id="e271d4aa-4f8b-4ab1-a65a-0e07060c7892" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	orgName: vars.flowName.orgName as String,
	firstName: vars.flowName.firstName as String,
	middleName: vars.flowName.middleName as String,
	lastName: vars.flowName.lastName as String
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="Logger" doc:id="9797531d-3cf5-4870-86b1-2b00e4b8bc68" message="#[payload]"/>
		<ee:transform doc:name="Transform Message" doc:id="ba2432e4-2ada-491e-ba5f-0d8375abaa11" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/dw
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="Logger" doc:id="47786e4d-acab-491f-b09f-b577e97de9de" message="#[payload]"/>
	
</flow>
